.container{
  padding: 30rpx;
  position: relative;
}
.topic-title{
  font-size: 40rpx;
  color: #000;
  font-weight: 600;
  line-height: 1.3;
}
.answer-handle{
  padding: 40rpx 0;
  border-bottom: 2rpx solid #cdcdcd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.answer-all{
  font-size: 26rpx;
  color: #4682B4;
}
.answer-send{
  font-size: 30rpx;
  font-weight: 600;
  color: #FF855B;
  text-align: center;
  line-height: 65rpx;
  width: 170rpx;
  height: 65rpx;
  border-radius: 34rpx;
  border: 3rpx solid #FF855B;
}
.user-container{
  margin: 50rpx 0;
  display: flex;
}
.user-avatar{
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
}
.user-name{
  font-size: 30rpx;
  color: #000;
  margin-left: 30rpx;
}
.answer-text{
  font-size: 32rpx;
  color: #666;
}
.answer-time{
  padding: 60rpx 0 30rpx 0;
  font-size: 30rpx;
  color: #C0C0C0;
  text-align: right;
}
.answer-footer{
  padding-bottom: 40rpx;
  border-bottom: 20rpx solid #F5F5F5;
  display: flex;
  justify-content: flex-end;
}
.answer-praise{
  display: flex;
}
.answer-tips{
  width: 50rpx;
  height: 50rpx;
}
.answer-collect-tips{
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx 0 0 40rpx;
}
.answer-num{
  font-size: 30rpx;
  color: #777;
  line-height: 50rpx;
  margin: 0 6rpx;
}
.reply-title{
  font-size: 32rpx;
  color: #777;
  margin: 20rpx 0 60rpx 20rpx;
}
.reply-item{
  display: flex;
  margin-bottom: 60rpx;
}
.reply-content{
  margin-left: 30rpx;
}
.reply-user-name{
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  line-height: 1.3;
}
.reply-time{
  font-size: 24rpx;
  color: #999;
}
.reply-text{
  display: block;
  font-size: 30rpx;
  color: #444;
  margin-top: 10rpx;
  width: 530rpx;
  word-break:break-all;
}
.reply-more{
  font-size: 30rpx;
  color: #4682B4;
  margin: 0 0 40rpx 80rpx;
}
.reply-send{
  display: flex;
}
.reply-input{
  justify-content: space-between;
  background-color: #F5F5F5;
  border-radius: 30rpx;
  width: 85%;
  height: 60rpx;
  font-size: 26rpx;
  color: #333;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.reply-btn{
  border: none;
  font-size: 34rpx;
  color: #DCDCDC;
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.active{
  color: #333;
}